<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.main.PregnancyTabFragment">


    <ImageView
        android:id="@+id/img_pregnant_woman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:src="@drawable/pregnant_woman"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_sitting"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/btn_article_category_bkg"
        android:drawableEnd="@drawable/ic_pregnant_woman"
        android:drawableRight="@drawable/ic_pregnant_woman"
        android:lineSpacingExtra="-12.3sp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:textColor="#ffffff"
        android:textSize="12.3sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_pregnant_woman"
        tools:fontFamily="@font/iransans_medium"
        tools:text=" نشستن در دوران بارداری" />

    <Button
        android:id="@+id/btn_nutrition"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/btn_article_category_bkg"
        android:drawableEnd="@drawable/ic_nutrition"
        android:drawableRight="@drawable/ic_nutrition"
        android:lineSpacingExtra="-12.3sp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:textColor="#ffffff"
        android:textSize="12.3sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sitting"
        tools:fontFamily="@font/iransans_medium"
        tools:text="تغذیه در دوران بارداری" />

    <Button
        android:id="@+id/btn_emergency"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/btn_article_category_bkg"
        android:drawableEnd="@drawable/ic_emergency"
        android:drawableRight="@drawable/ic_emergency"
        android:lineSpacingExtra="-12.3sp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:textColor="#ffffff"
        android:textSize="12.3sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_nutrition"
        tools:fontFamily="@font/iransans_medium"
        tools:text="اطلاعات اورژانسی دوران بارداری" />

    <TextView
        android:id="@+id/tv_remaining_days"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/tv_bubble_bkg"
        android:gravity="center"
        android:lineSpacingExtra="6.7sp"
        android:textColor="#b9150e"
        android:textSize="11.7sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_pregnant_woman"
        app:layout_constraintEnd_toStartOf="@+id/img_pregnant_woman"
        app:layout_constraintHorizontal_bias="0.63"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_pregnant_woman"
        tools:fontFamily="@font/iransans_medium"
        tools:text="124 روز \n باقی‌مانده" />

    <TextView
        android:id="@+id/tv_delivaery_date"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/tv_bubble_bkg"
        android:gravity="center"
        android:lineSpacingExtra="6.7sp"
        android:textColor="#b9150e"
        android:textSize="11.7sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_pregnant_woman"
        app:layout_constraintCircle="@id/tv_remaining_days"
        app:layout_constraintCircleAngle="200"
        app:layout_constraintCircleRadius="75dp"
        app:layout_constraintEnd_toStartOf="@+id/img_pregnant_woman"
        app:layout_constraintHorizontal_bias="0.63"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:fontFamily="@font/iransans_medium"
        tools:text="28 آبان \n روز زایمان" />

    <TextView
        android:id="@+id/tv_current_week"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/tv_bubble_bkg"
        android:gravity="center"
        android:lineSpacingExtra="6.7sp"
        android:textColor="#b9150e"
        android:textSize="11.7sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_pregnant_woman"
        app:layout_constraintCircle="@id/tv_remaining_days"
        app:layout_constraintCircleAngle="320"
        app:layout_constraintCircleRadius="70dp"
        app:layout_constraintEnd_toStartOf="@+id/img_pregnant_woman"
        app:layout_constraintHorizontal_bias="0.63"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:fontFamily="@font/iransans_medium"
        tools:text="هفته 22" />
</androidx.constraintlayout.widget.ConstraintLayout>